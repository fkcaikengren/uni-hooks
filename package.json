{
  "name": "@caikengren/monorepo",
  "type": "module",
  "version": "1.1.0",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@10.6.2",
  "scripts": {
    "dev": "nr dev:h5",
    "dev:h5": "nr -C playground dev:h5",
    "dev:mp": "nr -C playground dev:mp-weixin",
    "build": "nr build:packages",
    "build:packages": "turbo run build",
    "build:uni-hooks": "nr build --filter @caikengren/uni-hooks",
    "build:uni-hooks-shared": "nr build --filter @caikengren/uni-hooks-shared",
    "build:uni-use-request": "nr build --filter @caikengren/uni-use-request",
    "test:shared": "nr test --filter @caikengren/uni-hooks-shared",
    "test": "vitest",
    "docs:gen:uni-hooks": "typedoc --options typedoc.json --entryPoints packages/uni-hooks/index.ts --out docs/hooks/hooks",
    "docs:gen:uni-hooks-shared": "typedoc --options typedoc.json --entryPoints packages/uni-hooks-shared/index.ts --out docs/hooks/shared",
    "docs:gen:uni-use-request": "typedoc --options typedoc.json --entryPoints packages/uni-use-request/index.ts --out docs/hooks/use-request",
    "docs:gen": "nr docs:gen:uni-hooks && nr docs:gen:uni-hooks-shared && nr docs:gen:uni-use-request",
    "docs:dev": "vitepress dev docs",
    "docs:build": "nr docs:gen && vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --cache --fix .",
    "commit": "git-cz",
    "release:version": "npx changeset add && npx changeset version",
    "release": "tsx scripts/release.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@dcloudio/uni-app": "3.0.0-4020420240722002",
    "vue": "^3.5.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/browser": "^4.0.6",
    "@vue/test-utils": "^2.4.6",
    "commitizen": "^4.3.1",
    "cz-git": "^1.12.0",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "lint-staged": "^16.2.7",
    "playwright": "^1.56.1",
    "tinyglobby": "^0.2.15",
    "tsdown": "^0.15.12",
    "tsx": "^4.20.6",
    "typedoc": "^0.28.0",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.4.0",
    "vite": "^5.2.8",
    "vitepress": "^1.3.3",
    "vitest": "^1.6.1",
    "vitest-browser-vue": "^2.0.1"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "lint-staged": {
    "*.{js,ts,vue,jsx,tsx}": [
      "eslint --cache --fix"
    ]
  }
}
